{
  "name": "@menumaker/backend",
  "version": "1.0.0",
  "description": "MenuMaker Backend API - Fastify + TypeORM + PostgreSQL",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc || exit 0",
    "start": "node dist/main.js",
    "test": "JWT_SECRET=test-secret-key-for-ci-testing-32-chars-minimum NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typeorm": "typeorm-ts-node-esm",
    "migrate": "npm run typeorm migration:run -- -d src/config/database.ts",
    "migrate:create": "npm run typeorm migration:create",
    "migrate:revert": "npm run typeorm migration:revert -- -d src/config/database.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@menumaker/shared": "*",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "fastify": "^4.25.2",
    "minio": "^7.1.3",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "razorpay": "^2.9.4",
    "stripe": "^19.3.1",
    "twilio": "^5.3.4",
    "typeorm": "^0.3.19",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
